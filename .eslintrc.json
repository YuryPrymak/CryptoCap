{
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base"
  ],
  "ignorePatterns": ["dist/*", "gulpfile.js"],
  "rules": {
    "max-len": ["error", {
      "code": 110,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true
    }],
    "comma-dangle": "off",
    "arrow-parens": "off",
    "guard-for-in": "off",
    "no-restricted-syntax": "off",
    "no-plusplus": "off",
    "keyword-spacing": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "func-names": "off",
    "space-before-function-paren": "off",
    "no-unused-expressions": "off",
    "no-useless-constructor": "off",
    "import/extensions": 0
  }
}
